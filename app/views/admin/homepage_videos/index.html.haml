.row
  .columns.large-10
    %h2 Homepage Videos
  .columns.large-2
    = link_to "Add Video", new_admin_homepage_video_path, class: 'button'
  .columns.large-12
    %p These will be randomly selected.
  .columns.large-8{style: 'float: left'}
    %ul#homepage_videos.videos
      /.ui-sortable{data: { sorturl: '/admin/homepage_videos/sort'}}
      - @homepage_videos.each do |video|
        = content_tag_for :li, video do#, class: 'video' do
          = link_to video, edit_admin_homepage_video_path(video)

