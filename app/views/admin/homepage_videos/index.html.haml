.row
  .columns.large-10
    %h2 Homepage Videos
  .columns.large-2
    = link_to "Add Video", new_admin_homepage_video_path, class: 'button'
  - %w(active inactive).each_with_index do |action,index|
    .columns.large-6.small-6
      %h4= "#{action.capitalize} Videos"
      %ul.videos.ui-sortable{data: { sorturl: '/admin/homepage_videos/sort', tag: index }, class: "#{action}-videos"}
        - HomepageVideo.send(action).each do |video|
          = content_tag_for :li, video, data: { id: video.id }, class: 'all video' do
            = link_to video, edit_admin_homepage_video_path(video)


