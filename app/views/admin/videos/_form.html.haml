= form_for [:admin, @video] do |f|
  - if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :vimeoid
    = f.text_field :vimeoid

  .field
    = f.label :name
    = f.text_field :name
  / .field
  /   = f.label :slug
  /   = f.text_field :slug
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
