.social
  .share-container
    %span.share-text Share:
    = link_to "http://twitter.com/home?status=#{video.name} - #{request.url}", target: "_blank", class: "share twitter" do
      = fa_icon "twitter"
    = link_to "http://www.facebook.com/sharer/sharer.php?s=100&p[url]=#{request.url}&p[images][0]=#{video.image}&p[title]=#{video.name}&p[summary]=#{video.description}", target: "_blank", class: "share facebook" do
      = fa_icon "facebook"
    = link_to "http://pinterest.com/pin/create/button/?url=#{request.url}&media=#{video.image}&description=#{video.description}", target: "_blank", class: "share pinterest" do
      = fa_icon "pinterest"