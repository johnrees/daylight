!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0", name: "viewport"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= "Daylight Moving Image"
    = stylesheet_link_tag    "application", "http://fonts.googleapis.com/css?family=Lato:300,400", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js", "https://www.gstatic.com/swiffy/v5.1/runtime.js", "http://cdnjs.cloudflare.com/ajax/libs/gsap/latest/plugins/CSSPlugin.min.js"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body{class: "c-#{controller_name} a-#{action_name}"}
    .container
      %header
        %nav.top-nav

          = link_to "Backstage", "http://day-light.co.uk/backstage", class: 'link'
          = link_to "Blog", "http://blog.day-light.co.uk", class: 'link'

          = link_to "Email", "#", class: 'sprite Email'
          / = link_to "Tumblr", "#", class: 'sprite Tumblr'
          = link_to "Facebook", "#", class: 'sprite Facebook'
          = link_to "Twitter", "#", class: 'sprite Twitter'
          = link_to "Pinterest", "#", class: 'sprite Pinterest'
          = link_to "Instagram", "#", class: 'sprite Instagram'

          = link_to "YouTube", "#", class: 'sprite YouTube'
          = link_to "Vimeo", "#", class: 'sprite Vimeo'

        .row.logo
          #aperture-container
            #aperture{style: 'width: 70px; height: 70px'}
          #logo
            = link_to "Daylight", root_path, id: 'daylight'
            #moving-image Moving Image

        #contact
          %p Penthouse, 37 Turner Street, Manchester, M4 1DW
          %p T: 0161 839 9088 E: talk@day-light.co.uk

        #summary
          Established in 2004, Daylight is an award winning, independent, creative moving image company based in the northern quarter of Manchester.

          We like working in natural light.

        %nav#main-nav.inline{data: {bgcolor: '#f9a518'}}
          %ul
            %li= link_to_with_active_state "Showreel", showreel_path
            %li= link_to_with_active_state "Featured", featured_path
            %li= link_to_with_active_state "Work", videos_path
            %li= link_to_with_active_state "About", about_path
            %li= link_to_with_active_state "Clients", clients_path
            %li= link_to_with_active_state "Light Work", light_work_path
      #main
        = yield
