- title "Daylight Moving Image"
- button "Menu"
#content
  .row
    #homepage-video.tile
      %video#homepage-video{:loop => true}
        /{:poster => "poster.jpg", :preload => "true"}
        %source{:src => @video.video, :type => "video/mp4"}
        %object{:data => "flashmediaelement.swf", :type => "application/x-shockwave-flash"}
          %param{:name => "movie", :value => "flashmediaelement.swf"}/
          %param{:name => "flashvars", :value => "controls=true&file=#{@video.video}"}/
          = image_tag @video.image_url
          /%img{:src => "myvideo.jpg", :title => "No video playback capabilities"}/
      -# %video.video-js.vjs-default-skin
      -#   %source{ src: 'http://bitsushi.s3.amazonaws.com/noaudio.mp4', type: 'video/mp4'}
      -#   /, width: '100%', autoplay: true, loop: true}
      -# = image_tag "homepagevideoplaceholder.jpg"

  .row{style: 'margin-top: 20px'}
    #featured-videos Featured Videos

    #videos.thumbs
      - @videos.each_with_index do |video, index|
        .video.tile{style: "background-image: url(#{video.image});"}
          = link_to featured_path(index + 1) do
            .bg
              .info
                .name=video
                - if video.blurb.present?
                  .company=video.blurb