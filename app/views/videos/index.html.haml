#videos
  - @videos.each_with_index do |video,index|
    .video.tile{style: "background-image: url(#{video.image});", class: ("big" if index == 0)}
      /{class: @tags.sample.parameterize}
      = link_to video.fullpath do
        .bg{style: "background: ##{cycle('FFDC48', 'F2142B', 'F65830', 'FA9039', 'FFB740')}"}
          .info
            .name=video
            - if video.blurb.present?
              .company=video.blurb
