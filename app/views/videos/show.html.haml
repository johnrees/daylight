/= @video.vimeoid

- if action_name == 'show'
  - title "#{@video} / #{@video.tag}"
  - button "Work"
- else
  - title "Featured"
  - button "Featured"
.row
  #video= vimeo_player @video.vimeoid

.row
  .description
    %h3= @video.name
    = simple_format @video.description
  .social
    .share-container
      %span.share-text Share:
      = link_to "http://twitter.com/home?status=#{@video.name} - #{video_url(@video)}", target: "_blank", class: "share twitter" do
        = fa_icon "twitter"
      = link_to "http://www.facebook.com/sharer/sharer.php?s=100&p[url]=#{video_url(@video)}&p[images][0]=#{@video.image}&p[title]=#{@video.name}&p[summary]=#{@video.description}", target: "_blank", class: "share facebook" do
        = fa_icon "facebook"
      = link_to "http://pinterest.com/pin/create/button/?url=#{video_url(@video)}&media=#{@video.image}&description=#{@video.description}", target: "_blank", class: "share pinterest" do
        = fa_icon "pinterest"

#videos.thumbs
  - @videos.each_with_index do |video, index|
    .video.tile{style: "background-image: url(#{video.image});"}
      = link_to (action_name == 'show' ? video.fullpath : featured_path(index + 1)) do
        .bg
          .info
            .name=video
            - if video.blurb.present?
              .company=video.blurb
